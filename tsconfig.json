{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
		"experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
	"exclude": [
    "./node_modules"
  ],
  "include": [
    "./src/*.ts"
, "src/rules/RuleCollection.ts", "src/rules/FizzRule.ts", "src/rules/BuzzRule.ts", "src/rules/Rule.ts"  ]
}
